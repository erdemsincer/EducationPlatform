@model List<ResultDiscussionDto>

<div class="home-blog-area section-padding30">
    <div class="container">
        <!-- Section Title -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center mb-50">
                    <span>Son Tartışmalar</span>
                    <h2>Tartışmalara Göz Atın</h2>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class="home-blog-single mb-30">
                        <div class="blog-img-cap">
                            <div class="blog-img">
                                <img src="~/onlineedu-master/assets/img/discussion-default.jpg"
                                     alt="Tartışma Görseli"
                                     style="width:100%; height:300px; object-fit:cover;">
                                <!-- Tarih -->
                                <div class="blog-date text-center">
                                    <span>@item.CreatedAt.ToString("dd")</span>
                                    <p>@item.CreatedAt.ToString("MMM")</p>
                                </div>
                            </div>
                            <div class="blog-cap">
                                <p><i class="fa fa-user"></i> @item.UserFullName</p>
                                <h3><a href="/Student/StudentDiscussionReply/Detail/@item.Id">@item.Title</a></h3>
                                <p>@(item.Content.Length > 80 ? item.Content.Substring(0, 80) + "..." : item.Content)</p>
                                <a href="/Student/StudentDiscussionReply/Detail/@item.Id" class="more-btn">Tartışmaya Katıl »</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
