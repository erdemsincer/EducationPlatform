@{
    ViewData["Title"] = "Kariyer Danışmanı";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<h2 class="text-center">Kariyer Danışmanı</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="container">
    <form method="post" action="/Chatbot/GetCareerAdvicePost">
        <button type="submit" class="btn btn-primary mt-3">Öneri Al</button>
    </form>

    <h3 class="mt-4">Önerilen Kariyer:</h3>
    <div class="alert alert-info" style="white-space: pre-line;">
        @if (TempData["CareerAdvice"] != null)
        {
            @TempData["CareerAdvice"]
        }
        else
        {
            <span>Henüz bir öneri yok.</span>
        }
    </div>
</div>
